<Window xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200" Padding="10"
             Width="400"
             xmlns:vm="clr-namespace:ImageAnnotationTool.ViewModels"
             xmlns:enums="clr-namespace:ImageAnnotationTool.Enums"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:entities="clr-namespace:ImageAnnotationTool.Domain.Entities"
             x:Class="ImageAnnotationTool.Views.DeleteClassDialogWindow"
             x:DataType="vm:DeleteClassDialogViewModel"
             WindowStartupLocation="CenterOwner"
             SizeToContent="Height"
             CanResize="False"
             CanMaximize="False"
             CanMinimize="True"
             ExtendClientAreaToDecorationsHint="False"
             ExtendClientAreaChromeHints="PreferSystemChrome"
             ExtendClientAreaTitleBarHeightHint="-1" 
             Title="Deleting class">
    <Window.KeyBindings>
        <KeyBinding Gesture="Escape"
                    Command="{Binding CancelCommand}" />
        <KeyBinding Gesture="Enter"
                    Command="{Binding ProceedCommand}" />
    </Window.KeyBindings>
    <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                <UniformGrid Rows="4" Columns="2" Margin="0,20,0,0">
                    <RadioButton GroupName="ClassDeleteOptions" FontWeight="Bold" Content="{Binding 
                    Source={x:Static enums:ClassDeleteButtonOptions.SwapToSpecific},
                    Converter={StaticResource EnumDisplayNameConverter}}"                         
                                 IsChecked="{Binding DeleteMode,
                                 Converter={StaticResource EnumEqualityConverter},
                                 ConverterParameter={x:Static enums:ClassDeleteButtonOptions.SwapToSpecific}}"
                                 VerticalAlignment="Center"/>
                    
                    <Panel VerticalAlignment="Center" IsEnabled="{Binding DeleteMode,
                           Converter={StaticResource EnumEqualityConverter},
                           ConverterParameter={x:Static enums:ClassDeleteButtonOptions.SwapToSpecific}}">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="FilterIcon"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Margin="0,0,0,0" Grid.Column="0" HorizontalAlignment="Stretch"
                                             ItemsSource="{Binding SortedFilteredClassList}"
                                             SelectedValue="{Binding SubstituteClass, Mode=TwoWay}"
                                             MaxDropDownHeight="240"
                                             VerticalAlignment="Center">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="entities:ClassData">
                                        <Grid HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5*" MaxWidth="150"/>
                                                <ColumnDefinition Width="Auto" SharedSizeGroup="Color"/>
                                            </Grid.ColumnDefinitions>
                                            <ToolTip.Tip>
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" MaxWidth="150"/>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Color"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               VerticalAlignment="Center" Margin="0,0,2.5,0"
                                                               Text="{Binding Name}"
                                                               TextWrapping="Wrap" HorizontalAlignment="Stretch">
                                                    </TextBlock>
                                                    <Border Grid.Column="1" Margin="2.5,0,0,0" 
                                                            VerticalAlignment="Center" Width="20" Height="20"
                                                            Background="{Binding HexColor,
                                                            Converter={StaticResource ColorHexToBrushConverter}}">
                                                    </Border>
                                                </Grid>
                                            </ToolTip.Tip>
                                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="5,0,2.5,0"
                                                       HorizontalAlignment="Stretch" Text="{Binding Name}" 
                                                       TextTrimming="CharacterEllipsis" TextWrapping="Wrap" MaxLines="1">
                                            </TextBlock>
                                            <Border Grid.Column="1" Margin="2.5,0,5,0"
                                                    VerticalAlignment="Center" Width="20" Height="20"
                                                    Background="{Binding HexColor,
                                                    Converter={StaticResource ColorHexToBrushConverter}}" >
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                                <ComboBox.Styles>
                                    <Style Selector="Popup">
                                        <Setter Property="ShouldUseOverlayLayer" Value="False"/>
                                        <Setter Property="IsLightDismissEnabled" Value="True"/>
                                    </Style>
                                </ComboBox.Styles>
                            </ComboBox>
                            <Button Grid.Column="1" Margin="5,0,0,0"
                                    Width="30" Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                    Background="{DynamicResource SecondaryBackground}"
                                    Foreground="Transparent">
                                <PathIcon Data="{StaticResource IconFilterItems}" 
                                          Foreground="{DynamicResource PrimaryForeground}"/>
                                <Button.Flyout>
                                    <MenuFlyout ShowMode="TransientWithDismissOnPointerMoveAway">
                                        <StackPanel>
                                            <TextBlock>Filtering</TextBlock>
                                            <u:EnumSelector EnumType="enums:ClassFilterMode" 
                                                            Width="210" DisplayDescription="True"
                                                            Value="{Binding ClassFiltering}">
                                            </u:EnumSelector>
                                            <TextBlock>Sorting</TextBlock>
                                            <u:EnumSelector EnumType="enums:ClassSortMode" 
                                                            Width="210" DisplayDescription="True"
                                                            Value="{Binding ClassSorting}">
                                            </u:EnumSelector>
                                        </StackPanel>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </Grid>
                    </Panel>
                    <RadioButton GroupName="ClassDeleteOptions" FontWeight="Bold" Content="{Binding 
                    Source={x:Static enums:ClassDeleteButtonOptions.SwapIndividually},
                    Converter={StaticResource EnumDisplayNameConverter}}" 
                                 IsChecked="{Binding DeleteMode,
                                 Converter={StaticResource EnumEqualityConverter},
                                 ConverterParameter={x:Static enums:ClassDeleteButtonOptions.SwapIndividually}}"
                                 VerticalAlignment="Center"/>
                    <Control/>
                    
                    <RadioButton GroupName="ClassDeleteOptions" FontWeight="Bold" Content="{Binding 
                    Source={x:Static enums:ClassDeleteButtonOptions.SwapToUnassigned},
                    Converter={StaticResource EnumDisplayNameConverter}}"                         
                                 IsChecked="{Binding DeleteMode,
                                 Converter={StaticResource EnumEqualityConverter},
                                 ConverterParameter={x:Static enums:ClassDeleteButtonOptions.SwapToUnassigned}}"
                                 VerticalAlignment="Center"/>
                    <Control/>
                    
                    <RadioButton GroupName="ClassDeleteOptions" FontWeight="Bold" Content="{Binding 
                    Source={x:Static enums:ClassDeleteButtonOptions.DeleteAffected},
                    Converter={StaticResource EnumDisplayNameConverter}}"                        
                                 IsChecked="{Binding DeleteMode,
                                 Converter={StaticResource EnumEqualityConverter},
                                 ConverterParameter={x:Static enums:ClassDeleteButtonOptions.DeleteAffected}}"
                                 VerticalAlignment="Center"/>
                    
                </UniformGrid>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,20,0,0">
                <StackPanel.Styles>
                    <Style Selector="RadioButton">
                    </Style>
                    <Style Selector="Button">
                        <Setter Property="VerticalAlignment" Value="Stretch" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="Width" Value="100" />
                        <Setter Property="Margin" Value="10,0,0,0" />
                    </Style>
                </StackPanel.Styles>
                <Button Content="Proceed" 
                        IsEnabled="{Binding DeleteMode,
                        Converter={x:Static ObjectConverters.IsNotNull}}"
                        Command="{Binding ProceedCommand}" />
                <Button Content="Cancel" Command="{Binding CancelCommand}" />
            </StackPanel>
        </StackPanel>
</Window>
