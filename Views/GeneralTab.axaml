<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:ImageAnnotationTool.ViewModels"
             xmlns:model="clr-namespace:ImageAnnotationTool.Models"
             xmlns:view="clr-namespace:ImageAnnotationTool.Views"
             x:Class="ImageAnnotationTool.Views.GeneralTab"
             x:DataType="vm:MainViewModel">
                    <Border CornerRadius="10" 
                            Background="{DynamicResource PrimaryBackground}"
                            Margin="15,0,15,15">
                                    <StackPanel HorizontalAlignment="Stretch">
                                            <view:ImageView DataContext="{Binding ImageManagerVM}"/>
                                            <view:AnnotationView DataContext="{Binding ImageManagerVM.SelectedImageViewModel}"/>
                                            <view:CoordinateSubView DataContext="{Binding ImageManagerVM}"/>
                                            <view:ClassView DataContext="{Binding ClassManagerVM}"/>
                                            <view:SettingsView DataContext="{Binding SettingsManagerVM}"/>
                                    </StackPanel>
                    </Border>
</UserControl>
