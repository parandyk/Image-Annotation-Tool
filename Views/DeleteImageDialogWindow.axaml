<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ImageAnnotationTool.ViewModels"
        x:Class="ImageAnnotationTool.Views.DeleteImageDialogWindow"
        x:DataType="vm:DeleteImageDialogViewModel"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250" Padding="10"
        Width="400"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height"
        CanResize="False"
        CanMaximize="False"
        CanMinimize="True"
        ExtendClientAreaToDecorationsHint="False"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        ExtendClientAreaTitleBarHeightHint="-1" 
        Title="Deleting image">
    <Window.KeyBindings>
        <KeyBinding Gesture="Escape"
                    Command="{Binding CancelCommand}" />
        <KeyBinding Gesture="Enter"
                    Command="{Binding ProceedCommand}" />
    </Window.KeyBindings>
    <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,20,0,0">
                <StackPanel.Styles>
                    <Style Selector="Button">
                        <Setter Property="VerticalAlignment" Value="Stretch" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="Width" Value="100" />
                        <Setter Property="Margin" Value="10,0,0,0" />
                    </Style>
                </StackPanel.Styles>
                <!-- <Grid ColumnDefinitions="*, *" HorizontalAlignment="Left"> -->
                <CheckBox IsChecked="{Binding DontAskAgain, Mode=TwoWay}"
                           HorizontalAlignment="Left" VerticalAlignment="Center" x:Name="DontAskAgainButton" Content="Don't ask again"/>
                <!--     <TextBlock Grid.Column="1" Text="Don't ask again" TextWrapping="Wrap" Margin="10,0" -->
                <!--                HorizontalAlignment="Stretch" VerticalAlignment="Center"> -->
                <!--         <Interaction.Behaviors> -->
                <!--             <EventTriggerBehavior EventName="PointerPressed"> -->
                <!--                 <InvokeButtonClickAction TargetButton="DontAskAgainButton"/> -->
                <!--             </EventTriggerBehavior> -->
                <!--         </Interaction.Behaviors> -->
                <!--     </TextBlock> -->
                <!-- </Grid> -->
                <Button Content="Proceed" Command="{Binding ProceedCommand}" />
                <Button Content="Cancel" Command="{Binding CancelCommand}" />
            </StackPanel>
        </StackPanel>
</Window>
